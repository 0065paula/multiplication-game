<!-- freeExploration.wxml -->
<view class="container">
  <view class="card">
    <navigator open-type="navigateBack" class="back-btn">← 返回</navigator>
    <view class="title">自由探索模式</view>
    
    <view class="exploration-container">
      <view class="grid-container">
        <view class="apple-grid">
          <block wx:for="{{10}}" wx:for-index="row" wx:key="row">
            <view class="grid-row">
              <block wx:for="{{10}}" wx:for-index="col" wx:key="col">
                <view class="apple-cell {{appleMatrix[row][col].highlighted ? '' : 'gray-apple'}}" 
                      data-row="{{row}}" 
                      data-col="{{col}}" 
                      bindtap="handleCellTap" 
                      catch:touchmove="handleCellMove">
                  {{appleMatrix[row][col].highlighted ? '🍎' : '🍏'}}
                </view>
              </block>
            </view>
          </block>
        </view>
      </view>
      
      <view class="formula-display">
        {{formulaText}}
      </view>
    </view>
  </view>
</view>