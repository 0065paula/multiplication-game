/* index.wxss */
.card {
  width: 100%;
  background-color: white;
  border-radius: 32rpx;
  padding: 40rpx 30rpx;
  box-shadow: 0 8rpx 24rpx rgba(0,0,0,0.08);
  box-sizing: border-box;
}

.button-group {
  width: 100%;
  margin-bottom: 60rpx;
}

.multiplication-table-container {
  width: 100%;
  margin-top: 40rpx;
}

.table-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #555;
  margin-bottom: 20rpx;
  text-align: center;
}

.table-scroll {
  width: 100%;
  overflow-x: auto;
}

.multiplication-table {
  display: inline-block;
  margin: 0 auto;
  border-collapse: collapse;
}

.table-row {
  display: flex;
  justify-content: center;
}

.table-cell {
  padding: 10rpx 16rpx;
  border: 1rpx solid #e5e7eb;
  font-size: 24rpx;
  text-align: center;
  white-space: nowrap;
}