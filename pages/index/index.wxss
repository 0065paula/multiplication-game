/* index.wxss */
.card {
  width: 100%;
  background-color: white;
  border-radius: 32rpx;
  padding: 40rpx 30rpx;
  box-shadow: 0 8rpx 24rpx rgba(0,0,0,0.08);
  box-sizing: border-box;
}

.button-group {
  width: 100%;
  margin-bottom: 60rpx;
}

.multiplication-table-container {
  width: 100%;
  margin-top: 40rpx;
  padding: 0 20rpx;
  box-sizing: border-box;
}

.table-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #555;
  margin-bottom: 20rpx;
  text-align: center;
}

.table-scroll {
  width: 100%;
  overflow-x: auto;
  padding-bottom: 30rpx;
  -webkit-overflow-scrolling: touch;
}

.multiplication-table {
  display: table;
  border-collapse: collapse;
  margin-left: 20rpx;
}

.table-row {
  display: flex;
  justify-content: flex-start;
}

.table-cell {
  padding: 14rpx 16rpx;
  border: 1rpx solid #e5e7eb;
  font-size: 28rpx;
  text-align: center;
  white-space: nowrap;
  min-width: 140rpx;
  box-sizing: border-box;
  font-weight: 500;
}

.cell-even {
  background-color: #edf5ff;
}

.cell-odd {
  background-color: #f8faff;
}
